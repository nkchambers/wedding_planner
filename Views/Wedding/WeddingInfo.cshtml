@model WeddingInfoView


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Wedding Planner</title>
</head>
<body>
    <div class="container">

        <div class="d-flex justify-content-between mt-5 mb-5">
            <h1>@Model.Wedding.WedderOne & @Model.Wedding.WedderTwo's Wedding</h1>
            <a href="/Dashboard" class="btn btn-dark" style="font-weight: bold; padding-top: 5px; padding-right: 25px; padding-left: 25px; font-size: 25px; color: skyblue;">Dashboard</a>
            <a href="/logout" class="btn btn-dark" style="font-weight: bold; padding-top: 5px; padding-right: 25px; padding-left: 25px; font-size: 25px; color: skyblue;">Log Out</a>
        </div>

        <h2 style="margin-top: 100px;">Date: @Model.Wedding.Date</h2>
        <h2 style="margin-top: 30px;">Location: @Model.Wedding.WeddingAddress</h2>
        
        <div class="body" style="opacity: 0.95; margin-top: 50px; background-color: #212529; width: 800px;">
            <h3 style="margin-bottom: 20px; color: skyblue; margin-left: 50px; color: white; padding-top: 20px; color: skyblue;">RSVP/Guest List</h3>

            <ul style="font-size: 25px; list-style: circle; margin-left: 50px; color: white; padding-bottom: 20px;">
                @foreach(WeddingAttendees wed_attendee in Model.Wedding.WeddingAttendees)
                {
                    <li>@wed_attendee.AttendedBy.FirstName @wed_attendee.AttendedBy.LastName</li>
                }
            </ul>

        </div>

        
    </div>
</body>
</html>