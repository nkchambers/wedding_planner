@model wedding_planner.Models.Wedding

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
        <title>Wedding Planner</title>
    </head>
    <body>
        <div class="container" style="margin: 0px auto;">
            
            <div class="d-flex justify-content-between mt-5 mb-5">
                <h1>Plan Your Wedding</h1>
                <a href="/Dashboard" class="btn btn-dark" style="font-weight: bold; padding-top: 5px; padding-right: 25px; padding-left: 25px; font-size: 25px; color: skyblue;">Dashboard</a>
                <a href="/logout" class="btn btn-dark" style="font-weight: bold; padding-top: 5px; padding-right: 25px; padding-left: 25px; font-size: 25px; color: skyblue;">Log Out</a>
            </div>


            <form asp-action="CreateWedding" style="font-size: 20px;">
                <div class="mb-2">
                    <span asp-validation-for="WedderOne" class="text-danger"></span>
                    <label asp-for="WedderOne"></label>
                    <input asp-for="WedderOne">
                </div>
                <div class="mb-2">
                    <span asp-validation-for="WedderTwo" class="text-danger"></span>
                    <label asp-for="WedderTwo"></label>
                    <input asp-for="WedderTwo">
                </div>
                <div class="mb-4">
                    <span asp-validation-for="Date" class="text-danger"></span>
                    <label asp-for="Date"></label>
                    <input asp-for="Date">
                </div>
                <div class="mb-4">
                    <span asp-validation-for="WeddingAddress" class="text-danger"></span>
                    <label asp-for="WeddingAddress"></label>
                    <input asp-for="WeddingAddress">
                </div>
                <input class="btn btn-dark" type="submit" value="Create" style="padding: 5px 20px; margin-left: 260px; font-size: 20px; color: skyblue; font-weight: bold;">
            </form>
        </div>
    </body>
</html>