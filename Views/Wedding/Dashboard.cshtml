@model DashboardView


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
        <title>Login & Registration</title>
    </head>

    <body>

        <div class="container">

            <div class="d-flex justify-content-between">
                <h1>Welcome to the Wedding Planner, @Model.UserFirstName</h1>
                <a href="/logout">Log Out</a>
            </div>

            <table class="table">
                <thead>
                    <tr class="row">
                        <th class="col-3">Wedding</th>
                        <th class="col-3">Date</th>
                        <th class="col-2">Guests</th>
                        <th class="col-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Wedding wedding in Model.AllWeddings)
                    {
                        <tr class="row">
                            <td class="col-3"><a href="/weddings/@wedding.WeddingId">@wedding.WedderOne & @wedding.WedderTwo</a></td>
                            <td class="col-3">@wedding.Date</td>
                            <td class="col-2">@wedding.WeddingAttendees.Count</td>
                            <td class="col-2"><a href="/">RSVP</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/weddings/new" class="btn btn-secondary">Create a Wedding!</a>

        </div>

    </body>
</html>